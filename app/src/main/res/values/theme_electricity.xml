<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Orange 500, 700 -->
    <color name="theme_electricity_colorPrimary">#FF9800</color>
    <color name="theme_electricity_colorPrimaryDark">#F57C00</color>
    <!-- Material Deep Orange 500 -->
    <color name="theme_electricity_colorAccent">#FF5722</color>

    <style name="AppTheme.Electricity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_electricity_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_electricity_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_electricity_colorAccent</item>
    </style>

    <style name="AppTheme.Electricity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>